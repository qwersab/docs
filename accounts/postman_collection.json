{
  "info": {
    "_postman_id": "c5e31e8c-f2fc-4b82-af5d-e58f48dea3b1",
    "name": "Trading用户接口",
    "description": "用户登录、注册和信息管理API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "用户注册",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/accounts/register/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "accounts",
            "register",
            ""
          ]
        },
        "description": "创建新用户账号"
      },
      "response": []
    },
    {
      "name": "用户登录",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/accounts/login/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "accounts",
            "login",
            ""
          ]
        },
        "description": "用户登录并获取认证令牌"
      },
      "response": []
    },
    {
      "name": "获取用户信息",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Token {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/accounts/user/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "accounts",
            "user",
            ""
          ]
        },
        "description": "获取当前登录用户的信息"
      },
      "response": []
    },
    {
      "name": "更新用户信息",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Token {{auth_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"updated@example.com\",\n    \"profile_picture\": null\n}"
        },
        "url": {
          "raw": "{{base_url}}/accounts/user/update/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "accounts",
            "user",
            "update",
            ""
          ]
        },
        "description": "更新当前登录用户的个人信息"
      },
      "response": []
    },
    {
      "name": "登录失败 - 错误密码",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"wrongpassword\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/accounts/login/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "accounts",
            "login",
            ""
          ]
        },
        "description": "使用错误密码测试登录失败情况"
      },
      "response": []
    },
    {
      "name": "注册失败 - 重复用户名",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"another@example.com\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/accounts/register/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "accounts",
            "register",
            ""
          ]
        },
        "description": "测试使用已存在的用户名注册"
      },
      "response": []
    },
    {
      "name": "用户信息 - 无效令牌",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Token invalid_token_value"
          }
        ],
        "url": {
          "raw": "{{base_url}}/accounts/user/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "accounts",
            "user",
            ""
          ]
        },
        "description": "使用无效令牌测试认证失败的情况"
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "default"
    },
    {
      "key": "auth_token",
      "value": "your_token_here",
      "type": "default"
    }
  ]
}